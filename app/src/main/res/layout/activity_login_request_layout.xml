<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginRequest"
    android:gravity="center">

    <TextView
        android:id="@+id/activity_login_request_welcome_id"
        android:text="@string/activity_login_request_welcome_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/activity_login_request_please_login_id"/>

    <TextView
        android:id="@+id/activity_login_request_please_login_id"
        android:text="@string/activity_login_request_please_login_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="PassVault"
        android:ems="10"
        android:id="@+id/login_request_editText"
        android:layout_below="@+id/activity_login_request_please_login_id"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/login_request_button"
        android:layout_below="@+id/login_request_editText"
        android:layout_centerHorizontal="true"
        android:onClick="login_request_button_click" />

</RelativeLayout>
